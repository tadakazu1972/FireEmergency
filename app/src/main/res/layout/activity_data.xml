<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="20dp">
    <TextView
        android:id="@+id/lblData1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="あなたの基礎データを入力してください"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/lblData2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="■勤務消防署"
        android:textColor="#111111"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"/>
    <Spinner
        android:id="@+id/spnData1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/spn1Prompt"
        android:entries="@array/firestation"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:id="@+id/lblData3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="■大津波・津波警報時指定署"
        android:textColor="#111111"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"/>
    <Spinner
        android:id="@+id/spnData2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/spn1Prompt"
        android:entries="@array/firestation"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:id="@+id/lblData4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="■非常招集区分"
        android:textColor="#111111"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"/>
    <Spinner
        android:id="@+id/spnData3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/spn1Prompt"
        android:entries="@array/kubun"
        android:layout_marginBottom="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="震災"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_weight="1"
            android:id="@+id/btnEarthquake"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="風水害"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_weight="1"
            android:id="@+id/btnTyphoon"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="国民保"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_weight="1"
            android:id="@+id/btnKokuminhogo"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="緊援隊"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_weight="1"
            android:id="@+id/btnKinentai"/>
    </LinearLayout>
</LinearLayout>