<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="職員情報　登録画面"
            android:textSize="18sp"
            android:textColor="#111111"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:padding="20dp">
            <TextView
                android:id="@+id/lblData2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="■勤務消防署等"
                android:textColor="#111111"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"/>
            <Spinner
                android:id="@+id/spnData1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:prompt="@string/spn1Prompt"
                android:entries="@array/firestation"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/lblData3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="■大津波警報・津波警報時(震度5弱以上)参集指定署"
                android:textColor="#111111"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"/>
            <Spinner
                android:id="@+id/spnData2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:prompt="@string/spn1Prompt"
                android:entries="@array/firestation"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/lblData4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="■非常招集区分"
                android:textColor="#111111"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"/>
            <Spinner
                android:id="@+id/spnData3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:prompt="@string/spn1Prompt"
                android:entries="@array/kubun"/>
            <Button
                android:id="@+id/btnSave"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="登録"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:background="@drawable/red_button"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>